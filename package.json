{
  "name": "quoll",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently \"yarn api\" \"yarn client\"",
    "api": "node scripts/start-api.js",
    "client": "node scripts/start-client.js",
    "deploy": "concurrently \"yarn deploy:api\" \"yarn deploy:client\"",
    "deploy:api": "git push heroku-quoll-api master",
    "deploy:client": "git push heroku-quoll-client master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3"
  }
}
